  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.6",
    "concurrently": "^9.1.2",
    "http-server": "^14.1.1",
    "json-server": "^0.17.4"
  }
}
