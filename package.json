{
  "name": "adoptame",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npx @tailwindcss/cli -i ./assets/css/input.css -o ./dist/css/styles.css --watch",
    "build": "npx @tailwindcss/cli -m ./assets/css/input.css -o ./dist/css/styles.css",
    "client": "http-server -a localhost -p 8000",
    "server": "json-server --watch ./backend/backend.json",
    "start": "concurrently \"npm run client\" \"npm run server\" \"npm run dev\""
  },
